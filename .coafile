[default]
bears = coalaBear, FilenameBear, InvalidLinkBear
files = **.h, **.yml, **.py, **.html, **.m, **.java, **.md, **.c, **.xml
ignore = 

[markdown]
bears = MarkdownBear, LineLengthBear
files = README.md
max_line_length = 260
markdown_setext_headings = True
markdown_emphasis = _
markdown_strong = _

[xml]
bears = XMLBear, LineLengthBear
files = **.xml

[java]
bears = CheckstyleBear
files = **.java
