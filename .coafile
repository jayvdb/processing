[default]
bears = FilenameBear
files = README.md, core/README.md, core/src/**.java, app/src/**.java, java/src/**.java
file_naming_convention = pascal

[markdown]
bears = MarkdownBear, LineLengthBear
files = README.md
max_line_length = 260
markdown_setext_headings = True
markdown_emphasis = _
markdown_strong = _

[xml]
bears = XMLBear, LineLengthBear
files = app/build.xml, core/build.xml, java/build.xml, build/build.xml,
        .checkstyle.xml

[java]
bears = CheckstyleBear
files = core/src/**.java, app/src/**.java, java/src/**.java
checkstyle_configs = .checkstyle.xml
